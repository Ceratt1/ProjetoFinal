@model Categoria

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-circle"></i> Aviso Importante</h4>
    <p>@ViewBag.ErrorMessage</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Categoria:</dt>
            <dd class="col-sm-10">@Model.Nome</dd>
        </dl>
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Voltar para a lista
            </a>
        </div>
    </div>
</div>